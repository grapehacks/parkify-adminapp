<Window x:Class="AdministrationPanel.Views.CalendarPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CalendarPickerWindow" Height="67.088" Width="224.529"
        ResizeMode="NoResize">

    <StackPanel Orientation="Horizontal">
        <DatePicker x:Name="datePicker" DisplayDate="{Binding Date}" Margin="2" Padding="2" />
        <Button Margin="2" Padding="2" Command="{Binding SetDateCommand}">Zapisz</Button>
        <Button Margin="2" Padding="2" Click="Cancel">Anuluj</Button>
    </StackPanel>
</Window>
